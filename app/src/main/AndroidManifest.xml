<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Chatting"
        tools:targetApi="31">
        <activity
            android:name=".chat.views.ChatActivity"
            android:exported="false" />
        <activity
            android:name=".chat.views.ReceiverDetailProfileActivity"
            android:exported="false" />
        <activity
            android:name=".chat.views.UserActivity"
            android:exported="false" />
        <activity
            android:name=".information_profile.views.InformationProfileActivity"
            android:exported="false" />
        <activity
            android:name=".home.views.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".sign.view.MainSignActivity"
            android:exported="false" />
        <activity
            android:name=".Account.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".Account.SignInActivity"
            android:exported="false" />
        <activity
            android:name=".Account.LoginUsernameActivity"
            android:exported="false" />
        <activity
            android:name=".Account.LoginOTPActivity"
            android:exported="false" />
        <activity
            android:name=".Account.LoginPhoneNumberActivity"
            android:exported="false" />
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false" />
    </application>

</manifest>