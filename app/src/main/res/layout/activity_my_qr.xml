<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AcliceBlue"
    android:orientation="vertical"
    tools:context=".otherComponents.views.AboutActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_10sdp"
        android:paddingHorizontal="@dimen/_10sdp">

        <ImageView
            android:id="@+id/imageBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_24v2"
            android:layout_gravity="center"
            app:tint="@color/black"/>

        <TextView
            android:id="@+id/header"
            android:layout_width="@dimen/_257sdp"
            android:layout_height="wrap_content"
            android:text="QR Code"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textAlignment="center"
            android:gravity="center"
            android:paddingBottom="8dp" />
        <ImageView
            android:id="@+id/imageDownload"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/download"
            android:layout_gravity="center"
            app:tint="@color/black"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/qrCode"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="@dimen/_100sdp"
        android:layout_gravity="center"
        android:src="@drawable/logo" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WeLog"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold"
        android:textAlignment="center"/>
    <TextView
        android:layout_marginTop="@dimen/_100sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Copyright Â© 2025 Alec (Minh Duc Le). "
        android:textSize="@dimen/_14sdp"
        android:textAlignment="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="All rights reserved."
        android:textSize="@dimen/_14sdp"

        android:textAlignment="center"/>
</LinearLayout>